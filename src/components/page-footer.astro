---
import Container from "@/components/container.astro";
import { SITE } from "@/config/site";
import BackToTop from "@/components/back-to-top.astro";
import ThemeToggle from "@/components/theme-toggle.astro";
---

<footer class="footer">
  <Container>
    <div class="footer-content">
      <div class="footer-copyright">
        &copy; 2025 {`|`} {SITE.NAME}
      </div>
      <div class="footer-actions">
        <BackToTop />
        <ThemeToggle />
      </div>
    </div>
  </Container>
</footer>

<style>
.footer {
  padding: var(--spacing-md) 0;
  font-size: var(--font-size-sm);
  border-top: 1px solid var(--color-border);
  margin-top: 3rem;
}

.footer-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--spacing-xl);
  min-height: 40px;
}

.footer-copyright {
  color: var(--color-muted-foreground);
  flex-shrink: 0;
}

.footer-actions {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex-shrink: 0;
}

@media (max-width: 640px) {
  .footer-content {
    flex-direction: column;
    gap: var(--spacing-3xl);
    text-align: center;
    min-height: auto;
  }
  
  .footer-actions {
    gap: 0.5rem;
    justify-content: center;
  }
}
</style>

---
import { cn } from '@/lib/utils';

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  class?: string;
};

const { href, external, underline = true, class: className, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? '_blank' : '_self'}
  class={cn(
    'text-primary hover:text-foreground',
    underline && 'underline underline-offset-4',
    className
  )}
  {...rest}
>
  <slot />
</a>

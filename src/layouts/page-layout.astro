---
import Head from "@/components/page-head.astro";
import Header from "@/components/header.astro";
import Footer from "@/components/page-footer.astro";
import { SITE } from "@/config/site";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body
    class="font-sans antialiased flex flex-col bg-background dark:bg-stone-900 text-foreground dark:text-foreground/75"
  >
    <Header />
    <main class="flex-1 py-32">
      <slot />
    </main>
    <Footer />
  </body>
</html>
